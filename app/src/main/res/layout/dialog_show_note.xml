<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_assignment_late_black_24dp"
        android:id="@+id/imageViewTodo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewIdea"
        android:layout_toEndOf="@+id/imageViewIdea"
        android:layout_marginTop="52dp"
        android:textSize="30sp"
        android:id="@+id/txtTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginTop="44dp"
        android:id="@+id/txtDescription"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:id="@+id/btnOK"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
        android:id="@+id/imageViewIdea"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewImportant"
        android:layout_marginStart="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_check_circle_black_24dp"
        android:id="@+id/imageViewImportant"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewTodo" />

</RelativeLayout>